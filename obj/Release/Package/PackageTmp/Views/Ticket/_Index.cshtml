@model IEnumerable<BugTracker.Models.Ticket>

@{
    ViewBag.Title = "Admin";
}
<div class="box-info full">
    <h2><strong>Tickets</strong></h2>

    <!-- Additional buttons -->
    <div class="additional-btn">

        <a class="additional-icon" href="#" data-toggle="collapse" data-target="#tickets"><i class="fa fa-chevron-down"></i></a>
    </div>
    <div id="tickets" class="collapse in">
        <div class="table-responsive">
            <table data-sortable class="table table-striped" id="ticketstable">
                <thead>
                    <tr>


                        <th>
                            Priority
                        </th>
                        <th>
                            Project Name
                        </th>
                        <th>
                            Status
                        </th>
                        <th>
                            Type
                        </th>

                        <th>
                            Title
                        </th>

                        <th>
                            Options
                        </th>

                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        {
                            var priority = "";
                            if (item.Priority.Name == "High") { priority = "danger"; }
                            if (item.Priority.Name == "Medium") { priority = "warning"; }
                            if (item.Priority.Name == "Low") { priority = "success"; }

                            <tr>


                                <td>
                                    <span class="label label-@priority">@Html.DisplayFor(modelItem => item.Priority.Name)</span>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Project.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Status.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Type.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Title)
                                </td>

                                <td>
                                    <div class="btn-group btn-group-xs">
                                        <a href="@Url.Action("Edit", "Ticket", new { id = item.Id })" data-toggle="tooltip" title="edit" class="btn btn-default"><i class="fa fa-edit"></i></a>
                                        <a href="@Url.Action("Details", "Ticket", new { id = item.Id })" data-toggle="tooltip" title="details" class="btn btn-default"><i class="fa fa-info"></i></a>

                                    </div>
                                </td>

                            </tr>
                        }
                    }


                </tbody>
            </table>
        </div>
        </div>
    </div>











 